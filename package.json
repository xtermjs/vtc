{
  "name": "vtc",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "vtc": "src/index.ts"
  },
  "oclif": {
    "bin": "vtc",
    "commands": "./src/commands",
    "theme": {
      "alias": "cyan",
      "bin": "bold",
      "command": "cyanBright",
      "dollarSign": "green",
      "flag": "greenBright",
      "flagDefaultValue": "blue",
      "flagOptions": "yellow",
      "flagRequired": "redBright",
      "sectionHeader": "yellowBright",
      "topic": "cyanBright",
      "version": "magenta"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "build:bin": "bun build src/index.ts --compile --outfile dist/vtc",
    "typecheck": "tsc -p src/tsconfig.json --noEmit",
    "lint": "tsc -p src/tsconfig.json --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "@lunapaint/png-codec": "^0.2.0"
  }
}
